// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Project {
  id       Int    @id @default(autoincrement())
  url      String @unique
  category Room[]

  @@index([category])
}

enum Room {
  KITCHEN
  LIVING_ROOM
  BATHROOM
  EXTERIOR
  INTERIOR
  BEDROOM
  DINING
  LAUNDRY
  ATTIC
  GUEST_ROOM
  MASTER_BEDROOM
  BASEMENT
  GARAGE
  STORAGE
  BACKYARD
  FRONTYARD
  HALLWAY
  PORCH
  FIREPLACE
  CLOSET
  BALCONY
}
