generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("SUPABASE_URL")
  // directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Project {
  id       Int    @id @default(autoincrement())
  name     String @unique
  url      String @unique
  category Room[]
  createdAt DateTime @default(now())

  @@index([category])
}

enum Room {
  BALCONY
  BATHROOM
  KITCHEN
  LIVING_ROOM
  EXTERIOR
  DINING
  HALLWAY
  FLOOR
}
